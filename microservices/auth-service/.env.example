# Variables de entorno para Auth Service

# Base de datos PostgreSQL
DATABASE_URL=postgresql://auth_user:auth_password@localhost:5433/auth_db

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-with-at-least-32-characters
JWT_EXPIRES_IN=24h

# Application
NODE_ENV=development
PORT=3001

# CORS Origins (separados por coma)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=10

# Email Configuration (para reset password - opcional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@libreria.com
