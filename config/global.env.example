# Variables globales del proyecto
# Copia este archivo a global.env y configura los valores reales

# Información del proyecto
PROJECT_NAME="Libreria Microservicios"
PROJECT_VERSION="1.0.0"
PROJECT_DESCRIPTION="Sistema de microservicios para gestión de librería con NestJS y Next.js"

# URLs de servicios (desarrollo)
AUTH_SERVICE_URL="http://localhost:3001"
PRODUCT_SERVICE_URL="http://localhost:3002"
INVOICE_SERVICE_URL="http://localhost:3003"
CHAT_SERVICE_URL="http://localhost:3004"
FRONTEND_URL="http://localhost:3000"

# URLs de monitoreo
PROMETHEUS_URL="http://localhost:9090"
GRAFANA_URL="http://localhost:3005"

# Base de datos PostgreSQL - Puertos
AUTH_DB_PORT=5433
PRODUCT_DB_PORT=5434
INVOICE_DB_PORT=5435
CHAT_DB_PORT=5436

# Configuración de JWT
JWT_SECRET_LENGTH=64
JWT_EXPIRES_IN="7d"
REFRESH_TOKEN_EXPIRES_IN="30d"

# Configuración de bcrypt
BCRYPT_ROUNDS=12

# Configuración CORS
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:3001,http://localhost:3002,http://localhost:3003,http://localhost:3004"

# Configuración de logging
LOG_LEVEL="debug"
LOG_FORMAT="combined"

# Configuración de rate limiting
RATE_LIMIT_WINDOW="15" # minutos
RATE_LIMIT_MAX_REQUESTS="100"

# Configuración de archivos
MAX_FILE_SIZE="5MB"
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/gif,application/pdf"

# Configuración de email
EMAIL_SERVICE="gmail"
EMAIL_FROM="noreply@libreria.com"

# Configuración de notificaciones
NOTIFICATION_QUEUE="notifications"
NOTIFICATION_RETRY_ATTEMPTS=3

# Configuración de cache (Redis)
REDIS_URL="redis://localhost:6379"
CACHE_TTL="3600" # 1 hora en segundos

# Configuración de WebSocket
WEBSOCKET_CORS_ORIGINS="http://localhost:3000"
WEBSOCKET_TRANSPORTS="websocket,polling"

# Configuración de métricas
METRICS_PATH="/metrics"
METRICS_PORT="9464"

# Health check endpoints
HEALTH_CHECK_PATH="/health"
READY_CHECK_PATH="/ready"

# Configuración de Swagger
SWAGGER_TITLE="Librería Microservicios API"
SWAGGER_DESCRIPTION="API documentation for the bookstore microservices system"
SWAGGER_VERSION="1.0"
SWAGGER_PATH="/api"

# Configuración de Docker
DOCKER_REGISTRY="docker.io"
DOCKER_NAMESPACE="libreria"
DOCKER_TAG="latest"

# Configuración de CI/CD
CI_NODE_VERSION="18"
CI_DOCKER_VERSION="20.10"
DEPLOYMENT_ENVIRONMENT="development"

# Configuración de seguridad
SECURITY_HELMET_ENABLED=true
SECURITY_CSRF_ENABLED=false
SECURITY_RATE_LIMIT_ENABLED=true

# Timeouts
HTTP_TIMEOUT="30000" # 30 segundos
DATABASE_TIMEOUT="10000" # 10 segundos
CONNECTION_TIMEOUT="5000" # 5 segundos

# Configuración de backup
BACKUP_SCHEDULE="0 2 * * *" # Diario a las 2 AM
BACKUP_RETENTION_DAYS=30

# URLs de producción (placeholder)
PROD_AUTH_SERVICE_URL="https://auth.libreria.com"
PROD_PRODUCT_SERVICE_URL="https://products.libreria.com"
PROD_INVOICE_SERVICE_URL="https://invoices.libreria.com"
PROD_CHAT_SERVICE_URL="https://chat.libreria.com"
PROD_FRONTEND_URL="https://www.libreria.com"

# Configuración de SSL (producción)
SSL_CERT_PATH="/etc/ssl/certs"
SSL_KEY_PATH="/etc/ssl/private"
SSL_ENABLED=false # true en producción

# Configuración de CDN
CDN_URL="https://cdn.libreria.com"
STATIC_ASSETS_URL="https://assets.libreria.com"

# Configuración de analytics
GOOGLE_ANALYTICS_ID=""
HOTJAR_ID=""

# Feature flags
FEATURE_CHAT_ENABLED=true
FEATURE_INVOICES_ENABLED=true
FEATURE_NOTIFICATIONS_ENABLED=true
FEATURE_ANALYTICS_ENABLED=false

# Configuración de testing
TEST_DATABASE_URL="postgresql://test_user:test_password@localhost:5437/test_db"
TEST_TIMEOUT="30000"
COVERAGE_THRESHOLD=80

# Configuración de desarrollo
DEV_AUTO_RELOAD=true
DEV_HOT_RELOAD=true
DEV_DEBUG_MODE=true
DEV_MOCK_EXTERNAL_APIS=true
