# Configuración específica para desarrollo local
# Copia este archivo a development.env y configura los valores reales

# Base URLs
AUTH_SERVICE_URL=http://localhost:3001
PRODUCT_SERVICE_URL=http://localhost:3002
INVOICE_SERVICE_URL=http://localhost:3003
CHAT_SERVICE_URL=http://localhost:3004
FRONTEND_URL=http://localhost:3000

# Bases de datos PostgreSQL
AUTH_DB_HOST=localhost
AUTH_DB_PORT=5433
AUTH_DB_NAME=auth_db
AUTH_DB_USER=auth_user
AUTH_DB_PASSWORD=your_auth_db_password

PRODUCT_DB_HOST=localhost
PRODUCT_DB_PORT=5434
PRODUCT_DB_NAME=product_db
PRODUCT_DB_USER=product_user
PRODUCT_DB_PASSWORD=your_product_db_password

INVOICE_DB_HOST=localhost
INVOICE_DB_PORT=5435
INVOICE_DB_NAME=invoice_db
INVOICE_DB_USER=invoice_user
INVOICE_DB_PASSWORD=your_invoice_db_password

CHAT_DB_HOST=localhost
CHAT_DB_PORT=5436
CHAT_DB_NAME=chat_db
CHAT_DB_USER=chat_user
CHAT_DB_PASSWORD=your_chat_db_password

# JWT Configuration - CAMBIAR EN PRODUCCIÓN
JWT_SECRET=your_jwt_secret_key_64_characters_long_change_in_production
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=your_refresh_token_secret_64_characters_long
REFRESH_TOKEN_EXPIRES_IN=30d

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002,http://localhost:3003,http://localhost:3004

# Email Configuration (desarrollo)
EMAIL_HOST=smtp.mailtrap.io
EMAIL_PORT=2525
EMAIL_USER=your_mailtrap_user
EMAIL_PASS=your_mailtrap_password
EMAIL_FROM=noreply@libreria-dev.com

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# File upload configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880 # 5MB in bytes
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000 # 15 minutos
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=debug
LOG_FORMAT=dev

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3005
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=your_grafana_password

# Development flags
NODE_ENV=development
DEBUG=true
HOT_RELOAD=true
AUTO_RELOAD=true
MOCK_EXTERNAL_APIS=true

# API Documentation
SWAGGER_ENABLED=true
SWAGGER_PATH=/api

# Health checks
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/health

# Security (desarrollo)
HELMET_ENABLED=true
CSRF_ENABLED=false
RATE_LIMIT_ENABLED=true

# WebSocket
WEBSOCKET_CORS_ORIGINS=http://localhost:3000
WEBSOCKET_PATH=/socket.io

# Timeouts (desarrollo)
HTTP_TIMEOUT=60000
DATABASE_TIMEOUT=30000
CONNECTION_TIMEOUT=10000
